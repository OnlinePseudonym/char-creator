@page "/characters"
@using CharacterCreation.Shared.Models;
@inject HttpClient Http

<h1>Characters</h1>

<div>@characters.Length</div>

@foreach (var character in characters)
{
    <div>
        <a href="character/@character.Id">
            @character.Name
        </a>
    </div>
}

@code {
    private CharacterDto[] characters = new CharacterDto[] { };

    protected override async Task OnInitializedAsync()
    {
        characters = await Http.GetJsonAsync<CharacterDto[]>("api/characters");
    }
}